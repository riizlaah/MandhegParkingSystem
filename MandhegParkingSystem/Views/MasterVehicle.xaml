<Window x:Class="MandhegParkingSystem.Views.MasterVehicle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MandhegParkingSystem.Views"
        mc:Ignorable="d"
        Title="Master Vehicle" Height="550" Width="800">
    <Grid>
        <Label Content="Vehicle" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
        <DataGrid x:Name="table1" IsReadOnly="True" Margin="64,90,64,0" Height="200" SelectionMode="Single" AutoGenerateColumns="False" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible" SelectedCellsChanged="rowSelected">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Member.Name}" Header="Owner Name"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding VehicleType.Name}" Header="Vehicle Type"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding LicensePlate}" Header="License Plate"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Notes}" Header="Note"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="License Plate" HorizontalAlignment="Left" Margin="32,295,0,0" VerticalAlignment="Top"/>
        <Label Content="Vehicle Type" HorizontalAlignment="Left" Margin="32,358,0,0" VerticalAlignment="Top"/>
        <Label Content="Note" HorizontalAlignment="Left" Margin="32,419,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="licensePlate" HorizontalAlignment="Left" Margin="162,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="53" Background="Black" Foreground="White" TextAlignment="Center" FontSize="24" FontFamily="Consolas"/>
        <TextBox x:Name="note" HorizontalAlignment="Left" Margin="162,423,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="64"/>
        <ComboBox x:Name="vehicleType" HorizontalAlignment="Left" Margin="162,360,0,0" VerticalAlignment="Top" Width="238" SelectedValuePath="Id" DisplayMemberPath="Name"/>
        <Button x:Name="insertBtn" Content="INSERT" HorizontalAlignment="Left" Margin="442,299,0,0" VerticalAlignment="Top" Padding="12,8,12,8" FontWeight="Bold" Width="72" Click="OnInsert"/>
        <Button x:Name="updateBtn" Content="UPDATE" HorizontalAlignment="Left" Margin="442,376,0,0" VerticalAlignment="Top" Padding="12,8,12,8" FontWeight="Bold" Click="OnUpdate"/>
        <Button x:Name="deleteBtn" Content="DELETE" HorizontalAlignment="Left" Margin="442,455,0,0" VerticalAlignment="Top" Padding="12,8,12,8" FontWeight="Bold" Width="72" Click="OnDelete"/>
        <Button x:Name="saveBtn" Content="SAVE" HorizontalAlignment="Left" Margin="553,335,0,0" VerticalAlignment="Top" Padding="12,8,12,8" FontWeight="Bold" Width="71" Click="OnSave"/>
        <Button x:Name="cancelBtn" Content="CANCEL" HorizontalAlignment="Left" Margin="553,415,0,0" VerticalAlignment="Top" Padding="12,8,12,8" FontWeight="Bold" Click="OnCancel"/>
        <Label Content="Owner" HorizontalAlignment="Left" Margin="32,390,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="owner" TextChanged="OnMemberSearch" LostFocus="OnOwnerLostFocus" PreviewKeyDown="OnOwnerKeyDown" HorizontalAlignment="Left" Margin="162,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <ListBox x:Name="list1" Margin="162,412,400,29" Visibility="Hidden" PreviewKeyDown="OnList1KeyDown" MouseDoubleClick="OnList1DoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="Id"></Binding>
                                <Binding Path="Name"></Binding>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ComboBox x:Name="searchBy" HorizontalAlignment="Left" Margin="130,63,0,0" VerticalAlignment="Top" Width="111" SelectedIndex="0">
            <ComboBoxItem Content="Owner Name"/>
            <ComboBoxItem Content="License Plate"/>
        </ComboBox>
        <TextBox x:Name="searchInp" HorizontalAlignment="Left" Margin="246,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" TextChanged="OnTrySearch"/>
        <Label Content="Search By" HorizontalAlignment="Left" Margin="64,59,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="lastUpdated" HorizontalAlignment="Right" Margin="0,0,10,7" TextWrapping="Wrap" Text="This record is last modified at yyyy-MM-dd, HH:mm:ss" VerticalAlignment="Bottom" Width="301"/>

    </Grid>
</Window>
