<Window x:Class="MandhegParkingSystem.Views.ParkingPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MandhegParkingSystem.Views"
        mc:Ignorable="d"
        Title="Parking Payment" Height="550" Width="600">
    <Grid>
        <GroupBox Header="Vehicle Detail" Margin="10,76,317,0" Height="260" VerticalAlignment="Top" >
            <Grid>
                <Label Content="License Plate" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="licensePlate" TextChanged="OnLPlateChanged" HorizontalAlignment="Right" Margin="0,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
                <Label Content="Vehicle Type" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="vehicleType" SelectionChanged="OnVehicleTypeChanged" HorizontalAlignment="Right" Margin="0,43,10,0" VerticalAlignment="Top" Width="143" SelectedValuePath="Id" DisplayMemberPath="Name"/>
                <Label Content="In Time" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top"/>
                <Label Content="Out Time" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="inTime" SelectedDateChanged="OnInTimeChanged" VerticalAlignment="Center" SelectedDateFormat="Long" DisplayDate="2026-01-01" Margin="10,0,131,0"/>
                <DatePicker x:Name="outTime" SelectedDateChanged="OnOutTimeChanged" Margin="10,162,131,0" VerticalAlignment="Top" SelectedDateFormat="Long"/>
                <TextBox x:Name="inTimeDetail" LostFocus="OnInTimeDetailLost" TextChanged="OnInTimeDetailChanged" Margin="135,0,10,0" TextWrapping="Wrap" VerticalAlignment="Center" Text="03:00"/>
                <TextBox x:Name="outTimeDetail" LostFocus="OnOutTimeDetailLost" TextChanged="OnOutTimeDetailChanged" Margin="135,165,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="10:00"/>

            </Grid>
        </GroupBox>
        <Label Content="Vehicle" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
        <GroupBox Header="Owner" Margin="288,76,10,0" Height="89" VerticalAlignment="Top">
            <Grid>
                <Label Content="Owner" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="owner" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
                <Label Content="Member Type" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="memberType" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,38,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Payment" Margin="288,170,10,0" Height="166" VerticalAlignment="Top">
            <Grid>
                <Label Content="Parking Duration" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="duration" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
                <Label Content="Hourly Rate" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="hourlyRate" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,38,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
                <Label Content="Amount to Pay" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="amountToPay" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,80,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
                <Button x:Name="submit" Content="Submit" Click="OnSubmit" HorizontalAlignment="Right" Margin="0,0,10,10" Padding="12, 6" VerticalAlignment="Bottom" Width="104"/>

            </Grid>
        </GroupBox>


    </Grid>
</Window>
