<Window x:Class="MandhegParkingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MandhegParkingSystem"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300">
    <Grid>
        <Label Content="Mandheg Parking System" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="Employee ID" HorizontalAlignment="Left" Margin="25,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="25,93,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="empId" HorizontalAlignment="Left" Margin="122,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="122,97,0,0" VerticalAlignment="Top" Width="148"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Width="158" Height="27" Click="TryLogin"/>

    </Grid>
</Window>
